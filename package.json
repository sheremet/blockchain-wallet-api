{
  "name": "blockchain-wallet-api",
  "version": "0.0.1",
  "scripts": {
    "check": "npm-check --skip-unused",
    "preinstall": "npm i -g nodemon node-inspector rimraf npm-run-all npm-check",
    "start": "npm-run-all -s clean build start:simple",
    "start:simple": "node ./dist/server.js",
    "start:prod": "node ./server.js",
    "start:dev": "npm-run-all -s clean build -p watch:*",
    "start:debug": "npm-run-all -s clean build -p watch:* debug",
    "clean": "npm-run-all -p clean:*",
    "clean:dist": "rimraf dist",
    "clean:cov": "rimraf coverage",
    "debug": "node-debug",
    "build": "npm-run-all -s build:swagger",
    "build:swagger": "npm run swagger-gen && npm run routes-gen && tsc && npm run copy-swagger-ui",
    "watch:tsoaserv": "onchange './src/**/*.*' -d 3000 -- npm run swagger-gen && npm run routes-gen",
    "watch:node": "nodemon --inspect --delay 120 ./dist/server.js ",
    "watch:ts": "tsc --watch",
    "lint": "tslint ./src/**/*.ts",
    "swagger-gen": "node init-tsoa.js && tsoa swagger",
    "routes-gen": "tsoa routes",
    "copy-swagger-ui": "ncp ./src/presentation-layer/documentation/swagger-ui ./dist/swagger-ui",
    "tsoa": "tsoa"
  },
  "keywords": [
    "typescript",
    "swagger",
    "express"
  ],
  "engines": {
    "node": "~8.9"
  },
  "engineStrict": true,
  "dependencies": {
    "axios": "^0.17.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "class-validator": "^0.7.3",
    "config": "^1.27.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "event-dispatch": "^0.4.1",
    "express": "^4.16.2",
    "express-ping": "^1.4.0",
    "express-winston": "^2.4.0",
    "glob": "^7.1.2",
    "helmet": "^3.9.0",
    "js-yaml": "^3.10.0",
    "jsonwebtoken": "^8.1.0",
    "method-override": "^2.3.10",
    "moment": "^2.19.1",
    "mongodb": "^2.2.33",
    "mongoose": "^4.13.0",
    "node-env-file": "^0.1.8",
    "reflect-metadata": "^0.1.10",
    "tsoa": "^2.0.1",
    "typedi": "^0.5.2",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.7",
    "@types/chai": "^4.0.4",
    "@types/config": "^0.0.33",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.39",
    "@types/js-yaml": "^3.9.1",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/method-override": "^0.0.31",
    "@types/mocha": "^2.2.44",
    "@types/mongodb": "^2.2.15",
    "@types/mongoose": "^4.7.25",
    "@types/morgan": "^1.7.35",
    "@types/node": "^8.0.48",
    "@types/serve-static": "^1.13.0",
    "@types/supertest": "^2.0.3",
    "@types/winston": "^2.3.7",
    "chai": "^4.1.2",
    "codeclimate-test-reporter": "^0.5.0",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.1",
    "onchange": "^3.2.1",
    "remap-istanbul": "^0.9.5",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.0",
    "supertest": "^3.0.0",
    "swagger-jsdoc": "^1.9.7",
    "ts-helpers": "^1.1.1",
    "tslint": "^5.8.0",
    "typescript": "~2.6.1"
  }
}
